{
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "lib": ["ES2021", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build/esm",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
